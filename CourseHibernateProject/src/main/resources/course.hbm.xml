<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "day6.beans.CourseProject"  table="CourseProjectAdv_master_details" lazy="false">
      <id name = "CourseId" type = "int" column="course_id"/>            
      <property name = "Title" column = "course_title" type = "string"/>
      <property name = "Duration" column = "course_duration" type = "int"/>
      <property name = "Provider" column = "course_provider" type = "string"/>
      <property name = "Fees" type = "int">
      	<column name="course_fees"></column>
      </property>     
   </class>
</hibernate-mapping>